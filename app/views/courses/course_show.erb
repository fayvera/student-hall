
<div class="navbar">
<a href="/students/<%=current_user.slug %>">Home</a>
<a href="/posts">All Publications</a>
<a href="/courses">All Courses</a>
<a href="/logout" class="right">Log Out</a>
</div>

<h1><%= @course.name %></h1>
<h3><%= @course.description %></h3>

<a href="/posts/new">Create a Post</a>

<ul>    
    <% @posts.each do |post| %>
    <div class="side">
    <a href="/posts/<%= post.id %>"><%= post.title %></a><br>
        By: <strong><%= post.student.first_name %> <%= post.student.last_name %></strong><br>
       <p class="post"><%= post.content %></p>
    </div>
    <% end %>

</ul>