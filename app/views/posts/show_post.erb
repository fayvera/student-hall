<a href="/students/<%=current_user.slug %>">Home</a><br>
<a href="/posts">All Publications</a></br>

<h2><%= @post.title %></h2>
    Author: <strong><%= @author.first_name %> <%=@author.last_name %></strong>
<div>
    Course: <%= @course.name %><br></br>
    <%= @post.content %>
</div>
<br>
<% if current_user.id == @post.student_id %>
    <a href="/posts/<%= @post.id %>/edit"> Edit Post </a><br></br>
    <form method="post" action="/posts/<%=@post.id%>/delete">
        <input type="hidden" name="_method" value="delete">
        <input type="submit" value="Delete">
    </form>
<% end %>
